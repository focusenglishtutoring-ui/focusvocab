{
  "id": "unit-1",
  "title": "Unit 1: Spanish Basics",
  "modules": [
    {
      "id": "module-1",
      "title": "Essential Greetings",
      "entries": [
        {
          "id": "entry-1",
          "headword": "Hola",
          "senses": [
            {
              "id": "sense-1-1",
              "pos": "interjection",
              "definition_en": "Used as a common greeting to say hello",
              "examples": [
                "Hola, ¿cómo estás?",
                "¡Hola a todos!"
              ],
              "note": "Standard greeting in any social setting.",
              "quiz": {
                "question": "What is the English translation of 'Hola'?",
                "options": [
                  "Goodbye",
                  "Hello",
                  "Please"
                ],
                "correctAnswerId": "Hello"
              }
            }
          ]
        },
        {
          "id": "entry-2",
          "headword": "Buenas",
          "senses": [
            {
              "id": "sense-2-1",
              "pos": "interjection",
              "definition_en": "A shortened, informal version of 'Good morning/afternoon/evening'",
              "examples": [
                "Buenas, ¿qué tal?",
                "Buenas a todos."
              ],
              "note": "Very common in informal speech at any time of day.",
              "quiz": {
                "question": "When can you use 'Buenas'?",
                "options": [
                  "Only in the morning",
                  "Only at night",
                  "At any time of day"
                ],
                "correctAnswerId": "At any time of day"
              }
            }
          ]
        },
        {
          "id": "entry-3",
          "headword": "Gracias",
          "senses": [
            {
              "id": "sense-3-1",
              "pos": "interjection",
              "definition_en": "Used to express gratitude or thanks",
              "examples": [
                "Muchas gracias por tu ayuda.",
                "Gracias de todo corazón."
              ],
              "note": "Polite expression of gratitude.",
              "quiz": {
                "question": "What does 'Gracias' mean?",
                "options": [
                  "Please",
                  "Thank you",
                  "You're welcome"
                ],
                "correctAnswerId": "Thank you"
              }
            },
            {
              "id": "sense-3-2",
              "pos": "interjection",
              "definition_en": "Used to politely decline an offer (No, gracias)",
              "examples": [
                "¿Quieres más café? - No, gracias.",
                "No, gracias, ya comí."
              ],
              "note": "Commonly used with 'No' to decline something politely.",
              "quiz": {
                "question": "How do you politely say 'No, thank you'?",
                "options": [
                  "Sí, gracias",
                  "No, gracias",
                  "De nada"
                ],
                "correctAnswerId": "No, gracias"
              }
            }
          ]
        }
      ]
    }
  ]
}